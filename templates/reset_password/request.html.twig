{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Réinitialisation de mot de passe{% endblock %}

{% block body %}

    <div class="flex flex-col justify-start items-center w-11/12 sm:w-4/5 lg:w-2/3 mx-auto">
        {{ component('LogoBig') }}
        <h4 class="mb-3">Réinitialiser votre mot de passe</h4>

        {{ form_start(requestForm, {'attr': {'class': 'w-full max-w-lg my-5'}}) }}

            {{ component('Form/Email', {data: requestForm.email}) }}

            <p class="my-5">
                Renseignez votre adresse email. Un lien vous sera envoyé pour réinitialiser votre mot de passe
            </p>

            <div class="flex flex-col justify-center items-center gap-3 mt-5">
                {{ component('Button', {type: 'button', action: 'send', style: 'primary', content: 'Envoyer'}) }}
            </div>

        {{ form_end(requestForm, {'render_rest': false}) }}
    </div>

{% endblock %}
