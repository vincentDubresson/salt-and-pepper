{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Réinitialiser votre mot de passe{% endblock %}

{% block body %}

    <div class="flex flex-col justify-start items-center w-11/12 sm:w-4/5 lg:w-2/3 mx-auto mt-20">
        <h4 class="mb-3">Réinitialiser votre mot de passe</h4>

        {{ form_start(resetForm, {'attr': {'class': 'w-full max-w-lg my-5'}}) }}

        {{ component('Form/ResetPassword', {data: resetForm.plainPassword}) }}

        <div class="flex flex-col justify-center items-center gap-3 mt-5">
            {{ component('Button', {type: 'button', action: 'update', style: 'primary', content: 'Réinitialiser'}) }}
        </div>

        {{ form(resetForm._token) }}

        {{ form_end(resetForm, {'render_rest': false}) }}
    </div>

{% endblock %}
